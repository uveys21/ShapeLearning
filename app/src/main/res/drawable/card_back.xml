<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"> <!-- Şekil türü: dikdörtgen -->

    <!-- Dolgu Rengi -->
    <solid android:color="@color/card_back_color" /> <!-- colors.xml'de bir renk tanımlayın, örn: #455A64 (Koyu Gri Mavi) -->

    <!-- Köşe Yuvarlaklığı -->
    <corners android:radius="@dimen/card_corner_radius_medium" /> <!-- dimens.xml'de bir boyut tanımlayın, örn: 8dp -->

    <!-- Kenarlık (Opsiyonel) -->
    <stroke
        android:width="1dp"
        android:color="@color/card_back_stroke_color" /> <!-- colors.xml'de bir renk tanımlayın, örn: #B0BEC5 (Açık Gri Mavi) -->

</shape>